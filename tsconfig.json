{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": false,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"baseUrl": "./src",
		"paths": {
			"@components/*": ["components/*"],
			"@pages/*": ["pages/*"],
			"@hooks/*": ["hooks/*"],
			"@typings/*": ["typings/*"],
			"@utils/*": ["utils/*"],
			"@test/*": ["test/*"],
			"@fixtures/*": ["test/fixtures/*"],
			"@helpers/*": ["test/helpers/*"]
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"src/test/pages/failure.spec.ts",
		"src/test/pages/failure.spec.jsx"
	],
	"exclude": ["node_modules"]
}
